@model IEnumerable<Somativa.Models.VendaItem>

@{
    ViewData["Title"] = "Itens";
}

<h1 class="text-center mb-3">@ViewData["Title"]</h1>

<p class="text-center">
    <a class="text-decoration-none text-dark" asp-route-id="@ViewBag.VendaId" asp-action="Create">Adicionar vendas</a>
</p>
<div class="table table responsive">
<table class="table table-responsive py-5" style=" background-color: #99173C;border: 2px solid #000">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unitario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr style="border: 2px solid #000;background-color: #DCE9BE;">
            <td>
                @Html.DisplayFor(modelItem => item.Venda.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unitario)
            </td>
            <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.VendaItemId"><svg bootstrap-icon="PencilSquare" width="24" height="24" aria-label="Alarms" class="text-dark"></svg></a> |
                    <a asp-action="Details" asp-route-id="@item.VendaItemId"><svg bootstrap-icon="ZoomIn" width="24" height="24" aria-label="Alarms" class="text-dark"></svg></a> |
                    <a asp-action="Delete" asp-route-id="@item.VendaItemId"><svg bootstrap-icon="Trash" width="24" height="24" aria-label="Alarms" class="text-dark"></svg></a>|
            </td>
        </tr>
}
    </tbody>
</table>
</div>