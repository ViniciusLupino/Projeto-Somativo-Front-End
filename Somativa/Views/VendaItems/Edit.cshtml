@model Somativa.Models.VendaItem

@{
    ViewData["Title"] = "Edit";
}

<h1 class="my-5 text-center">Editar </h1>

<div class="row  justify-content-center text-white">
    <div class="col-md-4 form-group p-4 mb-3" style="border-radius: 8px;border: 2px solid #000;background-color: #D42053;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendaItemId" />
            <div class="form-group">
                <label asp-for="VendaId" class="control-label"></label>
                <select asp-for="VendaId" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;" asp-items="ViewBag.VendaId"></select>
                <span asp-validation-for="VendaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;" asp-items="ViewBag.ProdutoId"></select>
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unitario" class="control-label"></label>
                <input asp-for="Unitario" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;" />
                <span asp-validation-for="Unitario" class="text-danger"></span>
            </div>
            <div class="form-group justify-content-center text-center mt-2">
                <input type="submit" value="Editar" style="border-radius: 8px;border: 2px solid #000;background: #F5DC8A;" class="btn btn-primary px-2 text-dark mx-3 my-2" />
                <a style="border-radius: 8px;border: 2px solid #000;background:  #99173C;" class="btn btn-primary px-2 text-dark text-decoration-none mx-3" asp-action="Index" asp-route-id="@ViewBag.VendaId">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
