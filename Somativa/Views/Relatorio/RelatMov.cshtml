@model IEnumerable<Somativa.Models.Movimentacao>

@{
	ViewData["Title"] = "Relatório de Movimentações";
	var prod = ViewData["Produtos"] as List<Produto>;
	prod.Insert(0, new Produto { ProdutoId = new Guid(), Nome = "Todos" });
}

<h1 class="text-center mb-3">Relatório de Movimentações</h1>

<form >
	<div class="mt-3 mb-3 row justify-content-center text-center ">
		<div class="col col-12 col-md-5 col-lg-3">
			<label for="Data" >Data início:</label>
			<input type="date" name="Data" class="form-control" style="background-color: #F5DC8A;" />
		</div>
		<div class="col col-12 col-md-5 col-lg-3">
			<label>Data fim:</label>
			<input name="inDataFim" type="date" class="form-control" style="background-color: #F5DC8A;" />
		</div>
		
		<div class="col col-12 col-md-5 col-lg-3">
			<label>Movimentação:</label>
			<select name="inTipo" class=" form-select" style="background-color: #F5DC8A;">	
				<option value="0">Todos:</option>
				<option value="1">Entradas:</option>
				<option value="2">Saídas:</option>
			</select>
		</div>
		<div class="col col-12 col-md-5 col-lg-3">
			<label>Prato:</label>
			<select name="inProduto" class=" form-select" style="background-color: #F5DC8A;">
				@foreach (var item in prod)
				{
					<option value="@item.Nome">@item.Nome</option>
				}
			</select>
		</div>
		<div class="col col-3 text-center mt-3">

			<button asp-action="SearchMov" class="btn btn-success" style="background-color:#99173C"><svg bootstrap-icon="ZoomIn" width="24" height="24" aria-label="Alarms" class="text-dark"></svg></button>
			
			
		</div>
	</div>
</form>

<div class="table table-responsive">
<table class="table table-responsive">
	<thead style="background-color: #99173C;border: 2px solid #000" class="py-5">
		<tr >
			<th>
				@Html.DisplayNameFor(model => model.Nota)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DataHora)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.TipoMovimentacao)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Produto)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Quantidade)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Unitario)
			</th>

		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr style="border: 2px solid #000;background-color: #DCE9BE;">
				<td>
					@Html.DisplayFor(modelItem => item.Nota)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DataHora)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TipoMovimentacao)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Produto)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Quantidade)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Unitario)
				</td>

			</tr>
		}
	</tbody>
</table>
</div>