@model Somativa.Models.Categoria

@{
    ViewData["Title"] = "Detalhes";
}

<h1 class="my-5 text-center">Detalhes</h1>



<div class="row justify-content-center text-center">
    <div class="col-md-4 " style="border-radius: 8px;border: 2px solid #000;background-color: #D42053;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaId" />
            <div class="form-group p-3 " >
                <label asp-for="Nome" class="control-label"> </label>
                <label class="form-control" style="background-color: #DCE9BE;">@Model.Nome</label>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <a asp-action="Edit" style="border-radius: 8px;border: 2px solid #000;background: #F5DC8A;" class="btn btn-primary px-2 text-dark mx-3" asp-route-id="@Model?.CategoriaId">Editar</a>
                <a style="border-radius: 8px;border: 2px solid #000;background: #99173C;" class="btn btn-primary px-2 text-dark text-decoration-none mx-3" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>


