@model Somativa.Models.CompraItem

@{
    ViewData["Title"] = "Create";
    var CompraIdAux = ViewData["CompraId"];
}

<h1 class="my-5 text-center">Adicionar Item</h1>


<div class="row justify-content-center text-white">
    <div class="col-md-4 form-group p-4 mb-3" style="border-radius: 8px;border: 2px solid #000;background-color: #D42053;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompraId" class="control-label"></label>
                <input asp-for="CompraId" value="@CompraIdAux" class="form-control" readonly style="border: 2px solid #000;background-color: #DCE9BE;" />
            </div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select style="border: 2px solid #000;background-color: #DCE9BE;" asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input style="border: 2px solid #000;background-color: #DCE9BE;" asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unitario" class="control-label"></label>
                <input style="border: 2px solid #000;background-color: #DCE9BE;" asp-for="Unitario" class="form-control" />
                <span asp-validation-for="Unitario" class="text-danger"></span>
            </div>
            <div class="form-group justify-content-center text-center mt-2">
                <input type="submit" value="Criar" style="border-radius: 8px;border: 2px solid #000;background: #F5DC8A;" class="btn btn-primary px-2 text-dark mx-3 my-2" />
                <a style="border-radius: 8px;border: 2px solid #000;background:  #99173C;" class="btn btn-primary px-2 text-dark text-decoration-none mx-3" asp-action="Index" asp-route-id="@ViewBag.CompraId">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
