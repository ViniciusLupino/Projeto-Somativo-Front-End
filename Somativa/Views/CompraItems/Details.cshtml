@model Somativa.Models.CompraItem

@{
    ViewData["Title"] = "Detalhes";
}



<h1 class="my-5 text-center">Detalhes dos itens</h1>
<div class="row justify-content-center text-white">
    <div class="col-md-4 form-group p-4 mb-3" style="border-radius: 8px;border: 2px solid #000;background-color: #D42053;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompraItemId" />
            <div class="form-group">
                <label asp-for="CompraId" class="control-label"></label>
                <label  class="form-control" asp-items="ViewBag.CompraId" style="border: 2px solid #000;background-color: #DCE9BE;">@Model.Compra.Nota</label>
                <span asp-validation-for="CompraId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <label  class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;" asp-items="ViewBag.ProdutoId">@Model.Produto.Nome</label>
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <label asp-for="Quantidade" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;" >@Model.Quantidade</label>
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unitario" class="control-label"></label>
                <label asp-for="Unitario" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;" >@Model.Unitario</label>
                <span asp-validation-for="Unitario" class="text-danger"></span>
            </div>
            <div class="form-group justify-content-center text-center mt-2">
                <a asp-action="Edit" style="border-radius: 8px;border: 2px solid #000;background: #F5DC8A;" class="btn btn-primary px-2 text-dark mx-3 my-2" asp-route-id="@Model?.CompraItemId">Editar</a>
                <a style="border-radius: 8px;border: 2px solid #000;background:  #99173C;" class="btn btn-primary px-2 text-dark text-decoration-none mx-3" asp-action="Index" asp-route-id="@ViewBag.CompraId">Cancelar</a>
            </div>
        </form>
    </div>
</div>