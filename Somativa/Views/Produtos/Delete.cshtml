@model Somativa.Models.Produto

@{
    ViewData["Title"] = "Deletar";
}

<h1 class ="my-5 text-center">Deletar</h1>

<h3 class="alert alert-danger ">Você realmente tem certeza de que deseja deletar </h3>






<div class="row justify-content-center text-white">
    <div class="col-md-4 form-group p-4 mb-3" style="border-radius: 8px;border: 2px solid #000;background-color: #D42053;">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutoId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <label asp-for="Nome" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;"> @Model.Nome</label>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estoque" class="control-label"></label>
                <label asp-for="Estoque" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;"> @Model.Estoque</label>
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <label asp-for="Preco" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;"> @Model.Preco</label>
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <label asp-for="CategoriaId" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;">@Model.Categoria.Nome</label>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label>
                <label asp-for="FornecedorId" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;"> @Model.Fornecedor.Nome</label>
                <span asp-validation-for="FornecedorId" class="text-danger"></span>
            </div>
            <div class="form-group justify-content-center text-center">
                <input type="submit" value="Deletar" style="border-radius: 8px;border: 2px solid #000;background: #F5DC8A;" class="btn btn-primary px-2 text-dark mx-3 my-2" />
                <a style="border-radius: 8px;border: 2px solid #000;background:  #99173C;" class="btn btn-primary px-2 text-dark text-decoration-none mx-3" asp-action="Index">Cancelar</a>
            </div>


        </form>
    </div>
  
  
</div>
