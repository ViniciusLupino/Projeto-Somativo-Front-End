@model IEnumerable<Somativa.Models.Compra>

@{
    ViewData["Title"] = "Compras";
}

<h1 class="text-center mb-3">Compras</h1>

<p class="text-center ">
    <a class="text-decoration-none text-dark" asp-action="Create">Adicionar</a>
</p>
<div class="table table-responsive">
<table class="table table-responsive">
    <thead style="background-color: #99173C;border: 2px solid #000" class="py-5">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr style="border: 2px solid #000;background-color: #DCE9BE;">
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHora)
            </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.CompraId"><svg bootstrap-icon="PencilSquare" width="24" height="24" aria-label="Alarms" class="text-dark"></svg></a> |
                    <a asp-action="Details" asp-route-id="@item.CompraId"><svg bootstrap-icon="ZoomIn" width="24" height="24" aria-label="Alarms" class="text-dark"></svg></a> |
                    <a asp-action="Delete" asp-route-id="@item.CompraId"><svg bootstrap-icon="Trash" width="24" height="24" aria-label="Alarms" class="text-dark"></svg></a>|
                    <a asp-controller="CompraItems" asp-action="Index" asp-route-id="@item.CompraId"><svg bootstrap-icon="List" width="24" height="24" aria-label="Alarms" class="text-dark"></svg></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>