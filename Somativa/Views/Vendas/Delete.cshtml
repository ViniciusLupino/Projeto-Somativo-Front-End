@model Somativa.Models.Venda

@{
    ViewData["Title"] = "Deletar";
}


<h1 class="my-5 text-center">Delete</h1>

<h3 class="alert alert-danger ">Você realmente tem certeza de que deseja deletar </h3>






<div class="row  justify-content-center text-white">
    <div class="col-md-4 form-group p-4 mb-3" style="border-radius: 8px;border: 2px solid #000;background-color: #D42053;">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendaId" />
            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <label asp-for="Nota" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;">@Model.Nota</label>
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <label asp-for="ClienteId" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;">@Model.Cliente.Nome</label>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataHora" class="control-label"></label>
                <label asp-for="DataHora" class="form-control" style="border: 2px solid #000;background-color: #DCE9BE;"> @Model.DataHora</label>
                <span asp-validation-for="DataHora" class="text-danger"></span>
            </div>
            <div class="form-group justify-content-center text-center mt-2">
                <input type="submit" value="Deletar" style="border-radius: 8px;border: 2px solid #000;background: #F5DC8A;" class="btn btn-primary px-2 text-dark mx-3 my-2" />
                <a style="border-radius: 8px;border: 2px solid #000;background:  #99173C;" class="btn btn-primary px-2 text-dark text-decoration-none mx-3" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>